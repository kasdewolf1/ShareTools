<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">    
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/mijnaccount.css">
  <link rel="stylesheet" href="/header.css">
  <link rel="icon" type="image/x-icon" href="/img/favicon-32x32.png">
    <title>Share Tools</title>
</head>

<body>
  <div class="page-container">
    {{> header}}
    <div class="account-container">
    <a href="/mijnaccount"><button class="btn-terug">ðŸž€</button></a>
      <h1>Mijn account bewerken</h1>

      <section class="details-container">
        <section class="account-photo-change">
          <img src="/img/Mijn account.png" id="image" height="200" class="photo-change">

            <button id="chooseFile" class="upload-btn">Choose File</button>
            <input type="file" id="fileInput" style="display: none;">
        </section>

        <form action="/update-profile" method="POST">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{user.name}}" required>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{user.email}}" required>
    </div>
    <div>
        <label for="woonplaats">Woonplaats:</label>
        <input type="text" id="woonplaats" name="woonplaats" value="{{user.woonplaats}}" required>
    </div>
    <div>
        <label for="birthdate">Birthdate:</label>
        <input type="date" id="birthdate" name="birthdate" value="{{user.birthdate}}" required>
    </div>
    <button type="submit">Update Profile</button>
</form>

        <section class="account-info-change">
            <div class="form-floating">
                <textarea
                  class="form-control"
                  placeholder="Leave a comment here"
                  id="floatingTextarea"
                ></textarea>
                <label for="floatingTextarea">Gebruikersnaam</label>
              </div>
              
              <div class="form-floating">
                <textarea
                  class="form-control"
                  placeholder="Leave a comment here"
                  id="floatingTextarea"
                ></textarea>
                <label for="floatingTextarea">Geboortedatum</label>
              </div>

              <div class="form-floating">
                <textarea
                  class="form-control"
                  placeholder="Leave a comment here"
                  id="floatingTextarea"
                ></textarea>
                <label for="floatingTextarea">Email</label>
              </div>

              <div class="form-floating">
                <textarea
                  class="form-control"
                  placeholder="Leave a comment here"
                  id="floatingTextarea"
                ></textarea>
                <label for="floatingTextarea">Woonplaats</label>
              </div>
  
        </section>
      </section>
      <section class="buttons">
        <input type="submit" value="Opslaan" class="opslaan-btn">
        <input type="submit" value="Verwijderen" class="verwijder-btn">
     </section>
    </div>
  </div>


  
  <script>
    document.addEventListener('DOMContentLoaded', init);
    function init() {
      var input = document.querySelector('input');
      var reader = new FileReader();

      // When the FileReader "load" event fires, update the image.
      reader.onload = function (e) {
      document.getElementById("image").src = e.target.result;
      };
      
      document.getElementById('chooseFile').addEventListener('click', function() {
      input.click(); // Simulate a click on the file input element
      });

      // Listen for when the input changes.
      input.addEventListener('change', onInputChange)
      function onInputChange(e) {
      reader.readAsDataURL(this.files[0]);
      }
    }
  </script>
</body>
</html>
