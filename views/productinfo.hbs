<!-- views/productDetails.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Productdetails</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <main class="container">
    <section class="card">
      <figure class="image-placeholder"></figure>
      <figcaption class="info-caption">Informatie</figcaption>
    </section>
    <aside class="details">
      <h1>{{product.title}}</h1>
      <p>{{product.beschrijving}}</p>
      <div class="buttons">
        <button type="button">LEEN</button>
        <button type="button">BERICHT</button>
      </div>
    </aside>
  </main>
</body>
</html>