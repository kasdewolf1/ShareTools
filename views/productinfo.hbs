<!-- Inside your productinfo.ejs or productinfo.pug or whatever template engine you are using -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Get the product ID from localStorage
    const productId = localStorage.getItem('productId');
    if (productId) {
        // Remove the productId from localStorage to prevent repeated fetches
        localStorage.removeItem('productId');
        // Reload the page with the productId as a query parameter
        window.location.href = `/productinfo?productId=${productId}`;
    }
});
</script>

